{{!--
  Text + Image Section
  Two-column layout with text and image
  
  Config:
  - badge: string - Badge text above title
  - title: string - Section title
  - description: string - Section description
  - features: array - List of feature points with title and description
  - ctaText: string - Button text
  - ctaLink: string - Button link
  - image: string - Image URL
  - imageAlt: string - Image alt text
  - reverse: boolean - Flip layout (image on left)
  - backgroundColor: string - Section background
  
  DataSource: none
--}}

<section class="sf-section" style="{{#if config.backgroundColor}}background-color: {{config.backgroundColor}};{{/if}}">
  <div class="sf-container">
    <div class="sf-text-image {{#if config.reverse}}sf-text-image-reverse{{/if}}">
      <!-- Content -->
      <div class="sf-text-image-content">
        {{#if config.badge}}
        <span class="sf-section-badge">{{config.badge}}</span>
        {{/if}}
        
        <h2 class="sf-text-image-title">{{default config.title "Zašto odabrati nas?"}}</h2>
        
        {{#if config.description}}
        <p class="sf-text-image-description">{{config.description}}</p>
        {{/if}}
        
        {{#if config.features}}
        <ul class="sf-text-image-list">
          {{#each config.features}}
          <li class="sf-text-image-list-item">
            <span class="sf-text-image-list-icon">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
            </span>
            <div>
              {{#if this.title}}
              <strong>{{this.title}}</strong>
              {{#if this.description}} - {{this.description}}{{/if}}
              {{else}}
              {{this}}
              {{/if}}
            </div>
          </li>
          {{/each}}
        </ul>
        {{else}}
        <ul class="sf-text-image-list">
          <li class="sf-text-image-list-item">
            <span class="sf-text-image-list-icon">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
            </span>
            <div><strong>Visoka kvaliteta</strong> - Samo najbolji proizvodi prolaze našu kontrolu</div>
          </li>
          <li class="sf-text-image-list-item">
            <span class="sf-text-image-list-icon">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
            </span>
            <div><strong>Brza dostava</strong> - Vaša narudžba stiže u roku od 2-3 radna dana</div>
          </li>
          <li class="sf-text-image-list-item">
            <span class="sf-text-image-list-icon">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
            </span>
            <div><strong>Podrška 24/7</strong> - Tu smo za vas bilo kada zatrebate pomoć</div>
          </li>
        </ul>
        {{/if}}
        
        {{#if config.ctaText}}
        <a href="{{default config.ctaLink "/about"}}" class="sf-btn sf-btn-primary">
          {{config.ctaText}}
        </a>
        {{/if}}
      </div>
      
      <!-- Image -->
      <div class="sf-text-image-media">
        {{#if config.image}}
        <img src="{{config.image}}" alt="{{default config.imageAlt ""}}" loading="lazy">
        {{else}}
        <div class="sf-text-image-placeholder">
          <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
            <rect width="18" height="18" x="3" y="3" rx="2" ry="2"/>
            <circle cx="9" cy="9" r="2"/>
            <path d="m21 15-3.086-3.086a2 2 0 0 0-2.828 0L6 21"/>
          </svg>
        </div>
        {{/if}}
      </div>
    </div>
  </div>
</section>
