{{!--
  Hero Split Section
  Two-column hero with text and image side by side
  
  Config:
  - badge: string - Badge text above title
  - title: string - Main headline
  - subtitle: string - Supporting text
  - ctaText: string - Primary button text
  - ctaLink: string - Primary button link
  - secondaryCtaText: string - Secondary button text
  - secondaryCtaLink: string - Secondary button link
  - image: string - Right side image URL
  - imageAlt: string - Image alt text
  - reverse: boolean - Flip image to left side
  - features: array - List of feature bullet points
  
  DataSource: none
--}}

<section class="sf-section sf-hero">
  <div class="sf-container">
    <div class="sf-hero-split {{#if config.reverse}}sf-text-image-reverse{{/if}}">
      <!-- Content -->
      <div class="sf-hero-content">
        {{#if config.badge}}
        <span class="sf-hero-badge">{{config.badge}}</span>
        {{/if}}
        
        <h1 class="sf-hero-title">{{default config.title "Sve što trebate na jednom mjestu"}}</h1>
        
        {{#if config.subtitle}}
        <p class="sf-hero-subtitle">{{config.subtitle}}</p>
        {{/if}}
        
        {{#if config.features}}
        <ul class="sf-text-image-list">
          {{#each config.features}}
          <li class="sf-text-image-list-item">
            <span class="sf-text-image-list-icon">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
            </span>
            <span>{{this}}</span>
          </li>
          {{/each}}
        </ul>
        {{/if}}
        
        <div class="sf-hero-actions">
          <a href="{{default config.ctaLink "/shop"}}" class="sf-btn sf-btn-primary sf-btn-lg">
            {{default config.ctaText "Započni sada"}}
          </a>
          {{#if config.secondaryCtaText}}
          <a href="{{default config.secondaryCtaLink "/about"}}" class="sf-btn sf-btn-ghost sf-btn-lg">
            {{config.secondaryCtaText}}
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14"/>
              <path d="m12 5 7 7-7 7"/>
            </svg>
          </a>
          {{/if}}
        </div>
      </div>
      
      <!-- Image -->
      <div class="sf-hero-image">
        {{#if config.image}}
        <img src="{{config.image}}" alt="{{default config.imageAlt "Hero image"}}" loading="eager">
        {{else}}
        <div class="sf-hero-image-placeholder">
          <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
            <rect width="18" height="18" x="3" y="3" rx="2" ry="2"/>
            <circle cx="9" cy="9" r="2"/>
            <path d="m21 15-3.086-3.086a2 2 0 0 0-2.828 0L6 21"/>
          </svg>
          <span>Hero slika</span>
        </div>
        {{/if}}
      </div>
    </div>
  </div>
</section>
