{{!-- Related Products Section --}}
{{!-- Displays related/similar products - uses shared product-card partial --}}

<section class="sf-section sf-related-products" data-section-id="{{sectionId}}">
  <div class="sf-container">
    <div class="sf-section-header">
      <h2 class="sf-section-title">{{default config.title "Sliƒçni proizvodi"}}</h2>
      {{#if config.subtitle}}
      <p class="sf-section-description">{{config.subtitle}}</p>
      {{/if}}
    </div>

    {{> product-grid 
        products=relatedProducts 
        showDescription=true
        showStock=false
        showAddToCart=(default config.showAddToCart true)
    }}
  </div>
</section>
